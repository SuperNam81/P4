{# src/P4/BilletterieBundle/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

    <style>
      @import url('https://fonts.googleapis.com/css?family=PT+Sans:400,700');
      @import url('https://fonts.googleapis.com/css?family=Cinzel:400,700');
    </style>

    <title>{% block title %}Billetterie{% endblock %}</title>

    {% block stylesheets %}
      {% stylesheets filter='cssrewrite, ?scssphp'
      'bundles/p4billetterie/css/bootstrap.v1.css'
       %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
      {% endstylesheets %}
    {% endblock %}
  </head>

  <body>

  {######### HEADER #########}
  <header class="row col-lg-12 col-xs-12">
    <h1>{{ 'site.titre'|trans }}</h1>
    <p>
      {{ 'site.devise'|trans }}
    </p>
  </header>

  <div class="row col-lg-12 col-xs-12">
    <div class="container">

      {######### INFOS PRATIQUES #########}
      <div class="jumbotron col-lg-2 col-xs-12" id="infosPratiques">
        <div class="container-fluid col-lg-2 col-xs-12" id="containerInfosPratiques">

          {% if (app.request.getLocale()) == 'fr' %}
            <a href="#"><img src="{{ asset('bundles/p4billetterie/img/fr.svg') }}" height="10px" width="15px"></a> | 
            <a href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': 'en'})) }}"><img src="{{ asset('bundles/p4billetterie/img/gb2.svg') }}" height="10px" width="15px"></a>
          {% endif %}
          {% if (app.request.getLocale()) == 'en' %}
            <a href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': 'fr'})) }}"><img src="{{ asset('bundles/p4billetterie/img/fr.svg') }}" height="10px" width="15px"></a> | 
            <a href=""><img src="{{ asset('bundles/p4billetterie/img/gb2.svg') }}" height="10px" width="15px"></a>
          {% endif %}

          <h4>{{ 'ip.titre'|trans }}</h4>
          <h5>{{ 'ip.adresse'|trans }}</h5>
          <p>Musée du Louvre, 75058 Paris - France</p>
          <h5>{{ 'ip.telephone'|trans }}</h5>
          <p>+ 33 (0)1 40 20 53 17</p>
          <h5>{{ 'ip.horaires.titre'|trans }}</h5>
          <p>{{ 'ip.horaires.texte'|trans }}
          </p>
          <h5>{{ 'ip.tarifs.titre'|trans }}</h5>
          <ul id="tarifs">
              <li><strong>{{ 'ip.tarifs.normal.1'|trans }}</strong> {{ 'ip.tarifs.normal.2'|trans }}</li>
              <li><strong>{{ 'ip.tarifs.seniors.1'|trans }}</strong> {{ 'ip.tarifs.seniors.2'|trans }}</li>
              <li><strong>{{ 'ip.tarifs.enfants.1'|trans }}</strong> {{ 'ip.tarifs.enfants.2'|trans }}</li>
              <li><strong>{{ 'ip.tarifs.reduit.1'|trans }}</strong> {{ 'ip.tarifs.reduit.2'|trans }}
              </li>
              <li><strong>{{ 'ip.tarifs.gratuit.1'|trans }}</strong> {{ 'ip.tarifs.gratuit.2'|trans }}</li>
              <li><strong>{{ 'ip.billet.titre'|trans }}</strong> {{ 'ip.billet.texte'|trans }}</li>
          </ul>
        </div>
      </div>
      
      <div class="jumbotron col-lg-10 col-xs-12" id="formJumbo">
        <div class="container-fluid col-lg-10 col-xs-12" id="containerForm">

          {######### BODY #########}
          {% block body %}
          {% endblock %}

          <hr>

          {######### FOOTER #########}
          <footer>
            <p><img src="{{ asset('bundles/p4billetterie/img/louvre-logo.jpg') }}" height="20px" /> Musée du Louvre © {{ 'now'|date('Y') }}</p>
          </footer>
        </div>
      </div>

    </div>
  </div>

  </body>
</html>