{# src/P4/BilletterieBundle/Resources/views/Booking/recapMail.html.twig #}

<img src="data:image/jpeg;base64," alt="Louvre-logo"/>

<h2>{{ 'mail.titre.1'|trans }}<br>
	{{ 'mail.titre.2'|trans }}</h2>

<h3>{{ 'mail.resa.numero'|trans }} {{ id }}</h3>

<div>
	{{ 'mail.nbr.visiteur'|trans }} {{ listVisitors|length }}
	<br>
	<span>{{ 'mail.billet'|trans }} </span>
	{% if ticket == 0 %} {{ 'mail.billet.demi.journee'|trans }}
	{% elseif ticket == 1 %} {{ 'mail.billet.journee'|trans }}
	{% endif %}<br>
	<span>{{ 'mail.date.resa'|trans }} </span>{{ bookingDate }}<br><br>
	<span>{{ 'mail.prix.total'|trans }}</span><br>
	<h2>{{ prixTotal }}€</h2>
</div>

<h3>{{ 'mail.titre.3'|trans }}</h3>
<div>
	{% set i = 0 %}
	{% for visitor in listVisitors %}
		<div>
			{% set i = i + 1 %}
			<p><strong>{{ 'mail.visiteur'|trans }} {{ i }}</strong></p>
			<p>
				<span>{{ 'mail.nom'|trans }} </span>{{ visitor.lastname }}
			</p>
			<p>
				<span>{{ 'mail.prenom'|trans }} </span>{{ visitor.firstname }}
			</p>
			<p>
				<span>{{ 'mail.date.naissance'|trans }} </span>{{ visitor.dateBirth|date('d/m/Y') }}
			</p>
			<p>
				<span>{{ 'mail.age'|trans }} </span>{{ visitor.age }} ans
			</p>			
			<p>
				<span>{{ 'mail.pays'|trans }} </span>{{ visitor.country }}
			</p>
			<p>
				<span>{{ 'mail.reduit'|trans }} </span>
				{% if visitor.discount == 0 %} {{ 'mail.reduit.non'|trans }}
				{% elseif visitor.discount == 1 %} {{ 'mail.reduit.oui'|trans }}
				{% endif %}
			</p>
		</div>
	{% endfor %}
</div>
<br>
<h2>{{ 'mail.aurevoir'|trans }}</h2>
<p>Musée du Louvre © {{ 'now'|date('Y') }}</p>
